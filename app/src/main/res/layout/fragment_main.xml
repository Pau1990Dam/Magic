<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a14270729b.magicconfragment.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="+ veneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1Veneno"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:text="- veneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Veneno"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="+ vida"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn2Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn1Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn1Veneno"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1Veneno"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:text="- vida"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn4Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn3Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn3Veneno"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3Veneno"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="+ vida"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn7Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn2Vida"
        app:layout_constraintBottom_toTopOf="@+id/btn8Veneno"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn2Vida"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp" />

    <Button
        android:text="+ veneno"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn8Veneno"
        app:layout_constraintLeft_toLeftOf="@+id/btn7Vida"
        app:layout_constraintRight_toRightOf="@+id/btn7Vida"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="- vida"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn9Vida"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintBottom_toTopOf="@+id/btn10Veneno"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn4Vida"
        app:layout_constraintRight_toRightOf="@+id/btn4Vida"
        android:layout_marginTop="8dp" />

    <Button
        android:text="- veneno"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btn10Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn9Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn9Vida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="20/0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contador1"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn4Vida"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn2Vida"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="20/0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contador2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn8Veneno"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn10Veneno"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:text="robar vida"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn5Subir"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="robar vida"
        android:layout_height="0dp"
        android:id="@+id/btn6Bajar"
        android:textSize="10sp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="205dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.45054945" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="254dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.5582418" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="231dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.50769234" />

</android.support.constraint.ConstraintLayout>
