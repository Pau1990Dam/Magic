<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a14270729b.magicconfragment.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_height="wrap_content"
        android:id="@+id/btn1Veneno"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_veneno_mas"
        app:layout_constraintRight_toLeftOf="@+id/contador1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn3Veneno"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_veneno_menos"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn2Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn1Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn1Veneno"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1Veneno"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_corazon_mas"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn4Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn3Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn3Veneno"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3Veneno"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_action_name"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn7Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn2Vida"
        app:layout_constraintBottom_toTopOf="@+id/btn8Veneno"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn2Vida"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_corazon_mas"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn8Veneno"
        app:layout_constraintLeft_toLeftOf="@+id/btn7Vida"
        app:layout_constraintRight_toRightOf="@+id/btn7Vida"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_veneno_mas"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn9Vida"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintBottom_toTopOf="@+id/btn10Veneno"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn4Vida"
        app:layout_constraintRight_toRightOf="@+id/btn4Vida"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_action_name"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn10Veneno"
        app:layout_constraintRight_toRightOf="@+id/btn9Vida"
        app:layout_constraintLeft_toLeftOf="@+id/btn9Vida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_veneno_menos"
        android:scaleType="fitCenter"
        />

    <TextView
        android:text="20/0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contador1"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="20/0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contador2"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/contador1"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn5Subir"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_robarvida_jug1"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_height="0dp"
        android:id="@+id/btn6Bajar"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_robarvida_jug2"
        android:scaleType="fitCenter"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="191dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.42" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="264dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.58" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="228dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="96dp"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="288dp"
        app:layout_constraintGuide_percent="0.75" />

</android.support.constraint.ConstraintLayout>
